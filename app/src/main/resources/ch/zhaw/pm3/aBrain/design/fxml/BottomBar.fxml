<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>


<HBox fx:id="hBox" spacing="1.0" styleClass="bottom-bar" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.zhaw.pm3.aBrain.frontend.controller.BottomBarController">
   <children>
      <Button fx:id="btnHome" alignment="CENTER" contentDisplay="TOP" mnemonicParsing="false" onAction="#goToHome" styleClass="bottom-bar-button" text="Home">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="17.9" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img_elements/icon/home.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnPharmacy" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToPharmacy" styleClass="bottom-bar-button" text="Apotheke">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="17.9" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img_elements/icon/pharmacy.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnJournal" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToJournal" styleClass="bottom-bar-button" text="Journal">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="17.9" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img_elements/icon/journal.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnCommunity" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToCommunity" styleClass="bottom-bar-button" text="Community">
         <graphic>
            <ImageView fitHeight="21.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img_elements/icon/community.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="btnSettings" alignment="CENTER" contentDisplay="TOP" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#goToSettings" styleClass="bottom-bar-button" text="Einstellungen">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="17.9" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img_elements/icon/settings.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</HBox>
